<% if (success.length && success) { %>
<div class="alert alert-success mt-3 alert-dismissible fade show col-6 offset-3" role="alert">
  <center><b><%= success %></b></center>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>


<% if (error.length && error) { %>
<div class="alert alert-danger mt-3 alert-dismissible fade show col-6 offset-3" role="alert">
  <center><b><%= error %></b></center>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<% } %>